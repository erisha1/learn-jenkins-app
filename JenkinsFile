pipeline {
    agent any

    stages {
        stage('build') {
            agent{
                docker{
                image 'node:18-alpine'
                reuseNode true
            }
            }
            steps {
                sh '''
                    ls -la
                    touch noContainer.txt
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
     stage('test') {
                steps {
                    sh '''
                    test -f build/index.html
                    grep build/index.html
                    npm run test
                    '''
                }
            }
    }
}
